mixin navigation()
    ul
        li
            a(href="/")
                | Home
        li
            a(href="/topics")
                | Topics
        if loggedUser
            li
                a(href="/logout")
                    | Logout 
                    strong #{loggedUser.username}
        else
            li
                a(href="/register")
                    | Register
            li
                a(href="/login")
                    | Login
    
